{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "kroco6",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "message": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://*", "https://*"]
      },
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
            { 
                "name": "binaries/mitmdump",
                "sidecar": true, 
                "args": [
                    "-s",
                    "-q"
                ]
            }
        ]
      },
      "fs": {
          "scope": ["$RESOURCE/resources/json_output.py"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
          "binaries/mitmdump"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.kroco6.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
          "resources/json_output.py"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Kroco6",
        "width": 1200,
        "fileDropEnabled": false,
        "visible": false
      },
      {
        "width": 800,
        "height": 400,
        "decorations": false,
        "url": "/splashscreen.html",
        "label": "splashscreen",
        "visible": false
      }
    ]
  }
}
